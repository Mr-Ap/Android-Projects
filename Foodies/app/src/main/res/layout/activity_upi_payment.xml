<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_4"
    android:layout_height="match_parent"
    tools:context=".upi_payment">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Amount"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        android:id="@+id/amount_et"
        android:inputType="number"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="UPI ID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:id="@+id/upi_id"
        android:layout_below="@+id/amount_et"
        android:text="7218143434@paytm"
        android:editable="false"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:id="@+id/name"
        android:layout_below="@+id/upi_id"
        android:text="PATIL AVADHUT ANANT"
        android:editable="false"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Note"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:id="@+id/note"
        android:layout_below="@+id/name"
        android:text="Here's some money bro!"
        android:editable="false"/>

    <Button
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:id="@+id/send"
        android:layout_below="@+id/note"
        android:text="PAY"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>